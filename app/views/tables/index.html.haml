.content
  .header
    %h1.page-title Tables
    %ul.breadcrumb
      %li
        %a{:href => "index.html"} Home
      %li.active Tables
  .main-content
    .btn-toolbar.list-toolbar
      %a{:href=>new_table_path,:class=>"btn btn-primary"}
        %i.glyphicon.glyphicon-plus
        New Table
      %button.btn.btn-default{:type=>"button"} Import
      %button.btn.btn-default{:type=>"button"} Export
    %table.table
      %tr
        %th Code
        %th Min Capacity
        %th Max Capacity
        %th

      - @tables.each do |table|
        %tr
          %td= table.code
          %td= table.min_capacity
          %td= table.capacity
          %td
            = link_to 'Show', table
            = link_to 'Edit', edit_table_path(table)
            = link_to 'Destroy', table, :method => :delete, :data => { :confirm => 'Are you sure?' }