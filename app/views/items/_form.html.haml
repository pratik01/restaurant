= form_for @item do |f|
  - if @item.errors.any?
    .list-group-item.list-group-item-danger#error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    %legend Item Details
    .col-md-12
      = render :partial => "components/text_field",:locals => {:f=>f,:n=>"name",:txtLabel=>"Item Name",:c=>"required"}
    .col-md-12
      .form-group
        %lable
          Cuisine Name
          %span.require *
        = f.select(:cuisine_id,@cuisine_sub_category.collect {|p| [ p.name, p.id ] }, {include_blank: ''},{:class=>"form-control"})
    .col-md-12
      = render :partial => "components/number_field",:locals => {:f=>f,:n=>"price",:txtLabel=>"Price",:c=>"required"}
      .checkbox
        %label
          = f.check_box :status
          Active
  %fieldset
    %legend Available Option
    .col-md-12
      .checkbox
        .col-md-2
          %label
            = f.check_box :is_veg
            Veg
        .col-md-2
          %label
            = f.check_box :is_nonveg
            Non. Veg
        .col-md-2
          %label
            = f.check_box :is_swaminarayan
            Swaminarayan
        .col-md-2
          %label
            = f.check_box :is_jain
            Jain
  %fieldset
    %legend Upload Item Image
    .col-md-12
      = render :partial => "components/file_field",:locals => {:f=>f,:n=>"image",:txtLabel=>"",:c=>""}
  %fieldset
    %legend About Item
    .col-md-12
      = render :partial => "components/text_area_editor",:locals => {:f=>f,:n=>"description"}
  .actions
    = f.submit 'Save',:class=>"btn btn-primary"
    = link_to 'Back', items_path,:class=>"btn btn-default"
