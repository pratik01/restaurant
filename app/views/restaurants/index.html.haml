.content
  .header
    %h1.page-title Restaurants
    %ul.breadcrumb
      %li.active Restaurants
  .main-content
    .col-md-12.col-sm-12
      .row.list-view-sorting.clearfix
        .col-md-2.col-sm-2
          %a{:href=>"/restaurants/new","data-no-turbolink"=>true} Add New
        .col-md-10.col-sm-10
          .pull-right
            %label.control-label Sort&nbsp;By:
            %select.form-control.input-sm
              %option{:selected => "selected", :value => "#?sort=p.sort_order&amp;order=ASC"} Default
              %option{:value => "#?sort=pd.name&amp;order=ASC"} Name (A - Z)
              %option{:value => "#?sort=pd.name&amp;order=DESC"} Name (Z - A)
              %option{:value => "#?sort=rating&amp;order=DESC"} Rating (Highest)
              %option{:value => "#?sort=rating&amp;order=ASC"} Rating (Lowest)
      / BEGIN PRODUCT LIST
      .h-20
      .row.product-list{:style=>"overflow:auto;height:500px;"}
        - @restaurants.each do |r|
          .col-md-12
            .panel.panel-default
              .panel-body
                .col-md-3{:style=>"padding-left:0px;"}
                  %img.img-responsive{:src => "#{r.logo.to_s}",:style=>"margin-bottom:0px;height:150px;width:100%;",:class=>"thumbnail"}
                .col-md-7
                  %h2{:style=>"margin-top:0px;"}
                    %a{:href => "/restaurants/#{r.id}"}
                      = r.name
                  %p
                    .address
                      %i.glyphicon.glyphicon-map-marker
                      = r.address1
                      ,
                      = r.city
                      %i.glyphicon.glyphicon-phone
                      = r.contact1
                  %p
                    %i.glyphicon.glyphicon-time
                    = r.delay_time
                    Minutes
                  %p
                    %button{:type=>"button"}
                      %i.glyphicon.glyphicon-thumbs-up
                    %button{:type=>"button"}
                      %i.glyphicon.glyphicon-heart
                    Your Rating
                .col-md-2
                  %button{:type=>"button", :class=>"btn btn-default"}
                    Write Review