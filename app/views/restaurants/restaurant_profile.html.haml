            %a{"aria-controls" => "information", "data-toggle" => "tab", :href => "#information", :role => "tab"} Information
          %li{:role => "presentation"}
            %a{"aria-controls" => "images", "data-toggle" => "tab", :href => "#images", :role => "tab"} Images
          %li{:role => "presentation"}
            %a{"aria-controls" => "reviews", "data-toggle" => "tab", :href => "#reviews", :role => "tab"} Reviews
