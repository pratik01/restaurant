.container-fluid
  .h-20
  .row
    .col-md-2
      %img{:src=>"#{@restaurant.logo.to_s}",:class=>"thumbnail",:style=>"width:100%;height:150px;"}
    .col-md-6
      %h2{:style=>"margin-top:0px;"}
        =@restaurant.name
      %p
        %i.glyphicon.glyphicon-map-marker
        #{@restaurant.address1},#{@restaurant.city}
        %i.glyphicon.glyphicon-phone
        #{@restaurant.contact1}
      %p
        %i.glyphicon.glyphicon-time
        #{@restaurant.delay_time} Minutes
      %p
        %button{:type=>"button"}
          %i.glyphicon.glyphicon-thumbs-up
        %button{:type=>"button"}
          %i.glyphicon.glyphicon-heart
        Your Rating
  .row
    .col-md-9
      / Nav tabs
      .card
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "food_menu", "data-toggle" => "tab", :href => "#food_menu", :role => "tab"} Food Menu
          %li{:role => "presentation"}
            %a{"aria-controls" => "tables", "data-toggle" => "tab", :href => "#tables", :role => "tab"} Book Table
          %li{:role => "presentation"}
            %a{"aria-controls" => "information", "data-toggle" => "tab", :href => "#information", :role => "tab"} Information
          %li{:role => "presentation"}
            %a{"aria-controls" => "images", "data-toggle" => "tab", :href => "#images", :role => "tab"} Images
          %li{:role => "presentation"}
            %a{"aria-controls" => "reviews", "data-toggle" => "tab", :href => "#reviews", :role => "tab"} Reviews
        / Tab panes
        .tab-content
          #food_menu.tab-pane.active{:role => "tabpanel"}
            .row
              .col-md-2{:style=>"padding:0px;"}
                - @cusines_type.each do |ct|
                  .list-group{:style=>"margin-bottom:0px;"}
                    %a.list-group-item{:href=>"##{ct.name}",:style=>"font-weight:bold;"}
                      =ct.name
              .col-md-10
                .col-md-12{:style=>"padding:0px !important;"}
                  .pull-left
                    %input{:type=>"text",:class=>"form-control input-sm",:placeholder=>"Search"}
                  .pull-right
                    %button.btn.btn-primary.btn-sm{:type=>"button"}
                      List
                    %button.btn.btn-default.btn-sm{:type=>"button"}
                      Grid
                .h-10{:style=>"height:10px;clear:both;"}
                .col-md-12{:style=>"padding:0px !important;"}
                  - @cusines_type.each do |ct|
                    .panel.panel-default{:id=>"#{ct.name}"}
                      .panel-heading
                        %b=ct.name
                      .panel-body
                        - if !@cuisines_sub_false.blank?
                          %table.table.table-bordered.table-responsive{:style=>"margin-bottom:0px;"}
                            - @cuisines_sub_false.in_groups_of(2) do |group|
                              %tr
                                - group.each do |c|
                                  - if (ct.name == c.cuisine_type.name) && (c.is_subcategory==false)
                                    %td{:width=>250}
                                      =c.name
                                    %td
                                      =c.price
                        - if !@cuisines_sub_true.blank?
                          - @cuisines_sub_true.each do |c|
                            - if (ct.name == c.cuisine_type.name) && (c.is_subcategory==true)
                              .col-md-12{:style=>"padding-top:10px;padding-left:0px;padding-right:0px;"}
                                .panel.panel-default
                                  .panel-heading
                                    %b=c.name
                                  %table.table.table-bordered.table-responsive{:style=>"margin-top:0px;"}
                                    - c.items.to_a.in_groups_of(2,false) do |item|
                                      %tr
                                        - item.each do |i|
                                          %td{:width=>300}
                                            %a.itemName{"data-toggle" => "modal",:href=>"javascript:void(0)","data-id"=>"#{i.id}"}
                                              =i.name
                                          %td=i.price

