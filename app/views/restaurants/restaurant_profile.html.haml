.container-fluid
  .h-20
  .row
    .col-md-2
      %img{:src=>"#{@restaurant.logo.to_s}",:class=>"thumbnail",:style=>"width:100%;height:150px;"}
    .col-md-6
      %h2{:style=>"margin-top:0px;"}
        =@restaurant.name
      %p
        %i.glyphicon.glyphicon-map-marker
        #{@restaurant.address1},#{@restaurant.city}
        %i.glyphicon.glyphicon-phone
        #{@restaurant.contact1}
      %p
        %i.glyphicon.glyphicon-time
        #{@restaurant.delay_time} Minutes
      %p
        %button{:type=>"button"}
          %i.glyphicon.glyphicon-thumbs-up
        %button{:type=>"button"}
          %i.glyphicon.glyphicon-heart
        Your Rating
