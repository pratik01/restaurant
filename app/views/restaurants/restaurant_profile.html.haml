:css
  .topMain{
    background: black;
    min-height: 210px;
    width: 100%;
    background-repeat: round;
  }

.container-fluid.topMain
  .h-20
  .container
    .row
      .col-md-2{:style=>"padding-left:0px;"}
        %img{:src=>"#{@restaurant.logo.to_s}",:class=>"thumbnail",:style=>"height:150px;width:100%"}
      .col-md-8
        %h1{:style=>"margin-top:0px;color:white;font-weight: bold;"}
          =@restaurant.name
        %p{:style=>"color:white;font-weight:bold;"}
          %i.glyphicon.glyphicon-map-marker
          #{@restaurant.address1},#{@restaurant.city}
          %i.glyphicon.glyphicon-phone
          #{@restaurant.contact1}
        %p{:style=>"color:white;"}
          %i.glyphicon.glyphicon-time
          #{@restaurant.delay_time} Minutes
        %p{:style=>"color:white;"}
          %button{:type=>"button",:style=>"color:black;"}
            %i.glyphicon.glyphicon-thumbs-up
          %button{:type=>"button",:style=>"color:black;"}
            %i.glyphicon.glyphicon-heart
          Your Rating
      .col-md-2
        %button.btn.btn-block{:type=>"button"} Write Review
        .h-20
        %p{:style=>"color:white;"}
          Share On
        %a.btn.btn-social-icon.btn-twitter
          %span.fa.fa-twitter
        %a.btn.btn-social-icon.btn-facebook
          %span.fa.fa-facebook
        %a.btn.btn-social-icon.btn-google
          %span.fa.fa-google-plus
        %a.btn.btn-social-icon.btn-linkedin
          %span.fa.fa-linkedin
        .h-20
    .row
      .card{:style=>"margin-bottom:1px;"}
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "food_menu", "data-toggle" => "tab", :href => "#food_menu", :role => "tab"} Food Menu
          %li{:role => "presentation"}
            %a{"aria-controls" => "tables", "data-toggle" => "tab", :href => "#tables", :role => "tab"} Book Table
          %li{:role => "presentation"}
            %a{"aria-controls" => "information", "data-toggle" => "tab", :href => "#information", :role => "tab"} Information
          %li{:role => "presentation"}
            %a{"aria-controls" => "images", "data-toggle" => "tab", :href => "#images", :role => "tab"} Images
          %li{:role => "presentation"}
            %a{"aria-controls" => "reviews", "data-toggle" => "tab", :href => "#reviews", :role => "tab"} Reviews
